<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="convalida.sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/annotations_sample"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:text="@string/annotations_sample" />

        <Button
            android:id="@+id/databinding_sample"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:text="@string/databinding_sample" />

        <Button
            android:id="@+id/kotlin_dsl_sample"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:text="@string/kotlin_dsl_sample" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
